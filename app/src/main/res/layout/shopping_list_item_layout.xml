<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            app:layout_constraintLeft_toLeftOf="@id/descriptionView"
            app:layout_constraintRight_toRightOf="@id/descriptionView"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/categoryImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/categoryImage"
            android:layout_marginTop="24dp"
            android:id="@+id/descriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@android:color/darker_gray"
            android:text="Description Text"
            android:gravity="center"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:text="Lunch"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="32sp"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textColor="@android:color/tertiary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/itemName"
            app:layout_constraintTop_toBottomOf="@id/itemName"
            android:text="$5"
            android:textSize="32sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purchased"
            app:layout_constraintLeft_toLeftOf="@id/priceView"
            app:layout_constraintTop_toBottomOf="@id/priceView"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_marginLeft="18dp" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Edit"
            app:layout_constraintHorizontal_bias="1"
            android:id="@+id/editBtn"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/itemName"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="25sp" />

        <ToggleButton
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:textOff="Show Details"
            android:textOn="Hide Details"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="@id/editBtn"
            app:layout_constraintLeft_toRightOf="@id/itemName"
            app:layout_constraintTop_toBottomOf="@id/editBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
